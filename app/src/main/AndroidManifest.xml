<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.safari.drfoot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".application.MyApp"
            android:allowBackup="true"
            android:icon="@drawable/ic_doctor"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_doctor"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".activities.NavActivity"
                android:label="@string/title_activity_nav"
                android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
                android:name=".activities.RegisterActivity"
                android:theme="@style/AppThemeNoActionBar" />
        <activity
                android:name=".activities.ScenarioActivity"
                android:theme="@style/AppThemeNoActionBar" />
        <activity
                android:name=".activities.GameLevelActivity"
                android:theme="@style/AppThemeNoActionBar" />
        <activity
                android:name=".activities.Splash"
                android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.MainActivity"
                android:theme="@style/AppThemeNoActionBar" />
    </application>

</manifest>