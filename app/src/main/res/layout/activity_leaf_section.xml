<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/bigmargin"
        tools:context=".activities.ScenarioActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_doctor_48"
            android:id="@+id/doctorImage"
            android:layout_alignParentRight="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctorText"
            android:layout_toLeftOf="@+id/doctorImage"
            android:layout_margin="12dp"
            android:text="Hi!"
            android:background="@drawable/bubble"/>

    <LinearLayout
            android:id="@+id/topLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltext"
                android:text="Timer"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bigtext"
                android:id="@+id/timerText"
                android:text="00:00"/>

        <LinearLayout
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:id="@+id/coinImage"
                    android:src="@drawable/starcoin"/>
            <TextView android:id="@+id/coinTextView"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
        </LinearLayout>

    </LinearLayout>
    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topLinear"
            android:layout_marginTop="@dimen/smallmargin">
    </FrameLayout>
</RelativeLayout>