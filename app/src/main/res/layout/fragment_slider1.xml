<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.SliderFragment1">
    <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-thin"
            android:layout_marginBottom="@dimen/smallmargin"
            android:layout_width="wrap_content"
            android:textSize="@dimen/fontsize_big"
            android:layout_height="wrap_content"
            android:text="Choose Your Avatar"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
                android:layout_margin="@dimen/normal_margin"
                android:id="@+id/nursef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:src="@drawable/nurse_female"/>
        <android.support.v7.widget.AppCompatImageView
                android:layout_margin="@dimen/normal_margin"
                android:id="@+id/nursem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nurse_male"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
                android:layout_margin="@dimen/normal_margin"
                android:id="@+id/docf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor_female"/>
        <android.support.v7.widget.AppCompatImageView
                android:layout_margin="@dimen/normal_margin"
                android:id="@+id/docm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor_male"/>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>