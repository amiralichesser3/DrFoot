<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_margin="@dimen/bigmargin"
              android:gravity="center"
              android:id="@+id/root"
             android:layout_height="wrap_content">
    <FrameLayout android:layout_margin="@dimen/smallmargin" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/gamelevelsize" android:layout_height="@dimen/gamelevelsize" android:scaleType="centerInside" android:id="@+id/imageView"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_lock_black_36dp" android:layout_gravity="center" android:id="@+id/lockImage"/>
    </FrameLayout>
    <TextView android:textSize="@dimen/smalltext" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/textView" android:layout_gravity="center"/>
</LinearLayout>